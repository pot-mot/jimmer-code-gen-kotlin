GenTableIdView {
    id
}

GenTableCommonView {
    #allScalars

    id(entity)

    schema {
        id
        name

        dataSource {
            id
            name
            type
        }
    }
}

GenTableColumnView: GenTableCommonView {
    columns {
        #allScalars
        id(table)
    }
}

GenTableAssociationView: GenTableCommonView {
    columns {
        #allScalars
        id(table)

        inAssociations {
            id
            associationType
            dissociateAction
            fake
            sourceColumn {
                id
                name
                comment
                table {
                    id
                    name
                    comment
                }
            }
        }
        outAssociations {
            id
            associationType
            dissociateAction
            fake
            targetColumn {
                id
                name
                comment
                table {
                    id
                    name
                    comment
                }
            }
        }
    }
}

inputOnly GenTableInput {
    #allScalars
    id(schema)
    -createdTime
    -modifiedTime
}

inputOnly GenTableColumnsInput: GenTableInput {
    columns {
        #allScalars
    }
}
