GenTableIdView {
    id
}

GenTableCommonView {
    #allScalars

    id(entity)

    schema {
        id
        name

        dataSource {
            id
            name
            type
        }
    }
}

GenTableColumnsView: GenTableCommonView {
    columns {
        #allScalars
        id(table)
    }
}

GenTableAssociationsView: GenTableCommonView {
    columns {
        #allScalars
        table {
            id
            name
            comment
        }

        inAssociations {
            id
            associationType
            dissociateAction
            fake
            sourceColumn {
                id
                name
                comment
                table {
                    id
                    name
                    comment
                }
            }
        }
        outAssociations {
            id
            associationType
            dissociateAction
            fake
            targetColumn {
                id
                name
                comment
                table {
                    id
                    name
                    comment
                }
            }
        }
    }
}

input GenTableInput {
    #allScalars
    schema {
        id
        name
    }

    -createdTime
    -modifiedTime
}

input GenTableColumnsInput: GenTableInput {
    columns {
        #allScalars
        -createdTime
        -modifiedTime
    }
}
